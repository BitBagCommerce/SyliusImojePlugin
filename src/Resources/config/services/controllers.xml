<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service class="BitBag\SyliusIngPlugin\Controller\Shop\InitializePaymentController"
                 id="bitbag.sylius_ing_plugin.controller.shop.initialize_payment_controller"
        >
            <argument type="service" id="bitbag.sylius_ing_plugin.resolver.order.order_resolver"/>
            <argument type="service" id="bitbag.sylius_ing_plugin.resolver.payment.order_payment_resolver"/>
            <argument type="service" id="router"/>
            <argument type="service" id="bitbag.sylius_ing_plugin.bus.dispatcher"/>
            <tag name="controller.service_arguments"/>
        </service>

        <service class="BitBag\SyliusIngPlugin\Controller\Shop\RedirectController"
                 id="bitbag.sylius_ing_plugin.controller.shop.redirect_controller"
        >
            <tag name="controller.service_arguments"/>
        </service>
    </services>
</container>
