<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service class="BitBag\SyliusIngPlugin\Controller\Shop\InitializePaymentController"
                 id="bitbag.sylius_ing_plugin.controller.shop.initialize_payment_controller"
        >
            <argument type="service" id="bitbag.sylius_ing_plugin.resolver.order.order_resolver"/>
            <argument type="service" id="bitbag.sylius_ing_plugin.resolver.payment.order_payment_resolver"/>
            <argument type="service" id="bitbag.sylius_ing_plugin.bus.dispatcher"/>
            <argument type="service" id="bitbag.sylius_ing_plugin.provider.blik_model.blik_model_provider"/>
            <argument type="service" id="bitbag.sylius_ing_plugin.resolver.payment.transaction_payment_data_resolver"/>
            <tag name="controller.service_arguments"/>
        </service>

        <service class="BitBag\SyliusIngPlugin\Controller\Shop\RedirectController"
                 id="bitbag.sylius_ing_plugin.controller.shop.redirect_controller"
        >
            <argument type="service" id="bitbag.sylius_ing_plugin.bus.dispatcher"/>
            <argument type="service" id="bitbag.sylius_ing_plugin.factory.bus.payment_finalization_command_factory"/>
            <argument type="service" id="bitbag.sylius_Ing_plugin.generator.url.status.aggregate_status_based_url_generator"/>
            <argument type="service" id="bitbag.sylius_ing_plugin.resolver.status.status_resolver"/>
            <argument type="service" id="monolog.logger.ing"/>
            <tag name="controller.service_arguments"/>
        </service>

        <service class="BitBag\SyliusIngPlugin\Controller\Shop\Webhook\WebhookController"
                 id="bitbag.sylius_ing_plugin.controller.shop.webhook.webhook_controller"
        >
            <argument type="service" id="bitbag.sylius_ing_plugin.bus.dispatcher"/>
            <argument type="service" id="bitbag.sylius_ing_plugin.resolver.payment.ing_transaction_payment_resolver"/>
            <tag name="controller.service_arguments"/>
        </service>

        <service class="BitBag\SyliusIngPlugin\Controller\Shop\Oneclick\OneClickController"
                 id="bitbag.sylius_ing_plugin.controller.shop.oneclick.one_click_controller"
        >
            <argument type="service" id="bitbag.sylius_ing_plugin.resolver.gateway_code.gateway_code_from_order_resolver"/>
            <argument type="service" id="sylius.repository.order"/>
            <argument type="service" id="bitbag.sylius_ing_plugin.resolver.ing_one_click_signature.ing_one_click_signature_resolver"/>
            <argument type="service" id="bitbag.sylius_ing_plugin.factory.request.redirect_factory"/>
            <argument type="service" id="bitbag.sylius_ing_plugin.resolver.order.order_resolver"/>
            <tag name="controller.service_arguments"/>
        </service>

        <service class="BitBag\SyliusIngPlugin\Controller\Shop\Oneclick\RedirectOneClickController"
                 id="bitbag.sylius_ing_plugin.controller.shop.oneclick.redirect_one_click_controller"
        >
            <argument type="service" id="bitbag.sylius_ing_plugin.bus.dispatcher"/>
            <argument type="service" id="bitbag.sylius_ing_plugin.factory.bus.payment_finalization_command_factory"/>
            <argument type="service" id="bitbag.sylius_Ing_plugin.generator.url.status.aggregate_status_based_url_generator"/>
            <argument type="service" id="sylius.repository.payment"/>
            <argument type="service" id="bitbag.sylius_ing_plugin.resolver.status.status_resolver"/>
            <tag name="controller.service_arguments"/>
        </service>
    </services>
</container>
