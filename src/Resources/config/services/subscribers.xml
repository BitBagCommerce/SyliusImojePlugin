    <services>
        <service id="bitbag.sylius_ing_plugin.event_subscriber.authorization_subscriber"
                 class="BitBag\SyliusIngPlugin\EventSubscriber\AuthorizationSubscriber"
                 public="true"
        >
            <argument type="service" id="bitbag.sylius_ing_plugin.resolver.signature.signature_resolver" />
            <argument type="service" id="bitbag.sylius_ing_plugin.resolver.signature.own_signature_resolver" />
            <argument type="service" id="bitbag.sylius_ing_plugin.calculator.signature_calculator" />
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
